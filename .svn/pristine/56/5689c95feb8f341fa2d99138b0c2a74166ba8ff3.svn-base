@charset "UTF-8";

a:hover{
	text-decoration: none;
}


/* header */
header{
	display: flex;
	justify-content: center;
	align-items: center;
}
#headerTop{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 30px;
	width: 60%;
}

#logoContainer a{
	display: flex;
	align-items: center;
	color: hotpink
}

#logoTitle{
	font-family: 'Fira Sans', sans-serif;
	font-size: 20px;
}

header button{
	border: none;
	border-radius: 50px;
	height: 50px;
	background: transparent;
	font-size: 13px;
	font-weight: bold;
}

.userContent{
	display: flex;
	align-items: center;
}
.hostingBtn{
	background: transparent;
	color: white;
	font-weight: bold;
	width: 100px;
}
.hostingBtn a{
	color: black;
	
}

.hostingBtn:hover{
	background: #f0f1f2;
	cursor: pointer;
}

.userMenu{
	display : flex;
	align-items : center;
	justify-content:center;
	cursor: pointer;
	width:80px;
	margin-left: 20px;
	border: 1px solid black;
}

#userMenu_list{
	display : none;
	background:white;
	position: absolute;
	right: 250px;
	top:100px;
	z-index:100;
	border-radius: 10px;
	width: 200px;
	border:5px solid transparent;
	background-image: linear-gradient(#ffffff, #ffffff), linear-gradient(to right, #fbfcb9be, #ffcdf3aa, #65d3ffaa);
    background-origin: border-box;
    background-clip: content-box, border-box;
}

.userMenu_item{
	margin: 10px 0;
	padding: 10px 0;
	font-size : 15px;
	cursor: pointer;
	text-align:center;
}

.userMenu_item:hover{
	background:#f0f1f2;
}

.userMenu_item a{
	color: black;
	text-decoration: none;
	outline: none
}

/* main */
main{
	display: flex;
	justify-content: center;
}

#prodDetailContainer{
	width: 60%;
	
}

#prodTitle{
	padding: 20px 0;
	position: relative;
}

#prodName{
	font-family:'Black Han Sans', sans-serif;
	font-size: 30px;
}

.review{
	display: flex;
	align-items: center;
}

.starNum{
	margin-left: 5px;
	font-weight: bold;
}

.addFavorite{
	cursor: pointer;
	width: 50px;
	height: 50px;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	position: absolute;
	right: 10px;
	top:10px;
}

.addFavorite:hover{
	background: #f0eded;
}

#prodImgContainer{
	width: 100%;
	height: 500px;	
}

#prodImgContainer img{
	width: 100%;
	height: 100%
}

/* footer */
footer{
	background: #e3e2de;
}

#footer_list{
	display: flex;
	justify-content: center;
	padding: 30px;
}

#footer_list li{
	padding: 10px 0;
	cursor: pointer;
}

#footer_list ul{
	margin: 10px 20px;
}

#footer_list h3{
	font-weight: bold;
	margin: 0 20px;
}